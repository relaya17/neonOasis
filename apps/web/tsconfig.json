{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@neon-oasis/shared": ["../../packages/shared/src"],
      "@react-three/cannon": ["src/types/react-three-cannon.d.ts"],
      "@react-three/fiber": ["src/types/react-three-fiber.d.ts"]
    },
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types", "./src/types"],
    "skipLibCheck": true
  },
  "include": ["src", "src/types"]
}
